<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizzes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
       <%- include('navbar') %>
    <%- include('vlibras') %>
    <div class="container mt-5" >
        <h1 class="text-center mb-4" >Available Quizzes</h1>
        <div class="row" >
            <% quizzes.forEach(function(quiz, index) { %>
                <div class="col-md-4 mb-3" style="width:320px;">
                    <div class="card" >
                        <img src="https://i.pinimg.com/564x/54/41/49/544149695493a02c7ff59aa73053d3d9.jpg" class="card-img-top" alt="Quiz <%= index + 1 %>" style="height: 250px; width:290px;">
                        <div class="card-body">
                            <h5 class="card-title">Quiz <%= index + 1 %></h5>
                            <p class="card-text">Test your knowledge with Quiz <%= index + 1 %>.</p>
                            <a href="/questoes?id_questao=<%= quiz.id_questao %>" class="btn btn-primary">Take Quiz</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
