
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Sistema de Perguntas</title>
  <link rel="shortcut icon" href="../public/imagens/bloco_logo.svg" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/css/quizz.css">
</head>
<body>

  <div class="container">
    <h1 class="text-center">Perguntas Disponíveis</h1>

    <form method="POST" action="/responderQuizz">
        <input type="hidden" name="id_usuario" value="<%= id_Usuario %>">
        <input type="hidden" name="id_conteudo" value="<%= id_Conteudo %>">
      
        <% questoes.forEach((questao, i) => { %>
          <div class="row">
            <div class="col-8">
              <div class="card">
                <h2><%= questao.questao %></h2>
                <% if (questao.imagem_questao) { %>
                  <img src="/controller/Upload/<%= questao.imagem_questao %>" alt="Imagem da Questão">
                <% } %>
              </div>
            </div>
            <div class="col-4">
              <div class="radio-input">
                <div>
                  <input type="radio" id="one_<%= i %>" name="<%= questao.id_questao %>" value="<%= questao.txt_op1 %>">
                  <label for="one_<%= i %>"><%= questao.txt_op1 %></label>
                </div>
                <div>
                  <input type="radio" id="two_<%= i %>" name="<%= questao.id_questao %>" value="<%= questao.txt_op2 %>">
                  <label for="two_<%= i %>"><%= questao.txt_op2 %></label>
                </div>
                <div>
                  <input type="radio" id="three_<%= i %>" name="<%= questao.id_questao %>" value="<%= questao.txt_op3 %>">
                  <label for="three_<%= i %>"><%= questao.txt_op3 %></label>
                </div>
                <div>
                  <input type="radio" id="four_<%= i %>" name="<%= questao.id_questao %>" value="<%= questao.txt_op4 %>">
                  <label for="four_<%= i %>"><%= questao.txt_op4 %></label>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      
        <button type="submit">Enviar Quizz</button>
      </form>
      
  </div>

</body>
</html>
